@using System.Linq
@model Mais_Kitchen.Models.Restaurant

@{
    ViewData["Title"] = Model?.RestaurantName ?? "Restaurant";
}

@if (Model == null)
{
    <section class="container py-5">
        <div class="alert alert-warning text-center">
            Restaurant not found.
        </div>
    </section>
}
else
{
    var restaurant = Model;
    var isAuthenticated = User?.Identity?.IsAuthenticated == true;
    var foodItems = restaurant.FoodItems?.ToList() ?? new List<Mais_Kitchen.Models.FoodItem>();
    var reviews = restaurant.Reviews?.ToList() ?? new List<Mais_Kitchen.Models.Review>();

    <!-- Hero Section -->
    <section class="restaurant_detail py-5"
             style="background: url('@(string.IsNullOrEmpty(restaurant.ImageUrl) ? "/images/hero-bg.jpg" : restaurant.ImageUrl)') center/cover no-repeat; color: white;">

        <div style="background: rgba(0,0,0,0.6); padding: 80px 0;">
            <div class="container text-center">
                <h1 class="display-4 fw-bold">@restaurant.RestaurantName</h1>
                <p class="lead">@restaurant.Description</p>

                <div class="mt-3">
                    <span class="badge bg-warning text-dark">
                        <i class="fa fa-star"></i>
                        @(restaurant.Rating.ToString("0.0"))
                    </span>

                    <span class="badge bg-light text-dark">
                        <i class="fa fa-clock"></i>
                        @restaurant.DeliveryTime mins
                    </span>

                    <span class="badge bg-light text-dark">
                        <i class="fa fa-truck"></i>
                        $@restaurant.DeliveryFee.ToString("0.00") Delivery
                    </span>
                </div>
            </div>
        </div>
    </section>

    <!-- Menu Section -->
    <section class="food_section layout_padding">
        <div class="container">

            <div class="heading_container heading_center mb-4">
                <h2>@restaurant.RestaurantName Menu</h2>
            </div>

            @if (foodItems.Any())
            {
                <div class="row">
                    @foreach (var item in foodItems)
                    {
                        <div class="col-sm-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">

                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/default-food.jpg" : item.ImageUrl)"
                                     class="card-img-top"
                                     style="height:220px; object-fit:cover;"
                                     alt="@item.FoodName" />

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@item.FoodName</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        @item.Description
                                    </p>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <strong>$@item.Price.ToString("0.00")</strong>

                                        @if (isAuthenticated)
                                        {
                                            <button class="btn btn-sm btn-outline-primary"
                                                    onclick="addToCart(@item.FoodItemID)">
                                                <i class="fa fa-shopping-cart"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-controller="Account"
                                                   asp-action="Login"
                                                   class="btn btn-sm btn-outline-secondary">
                                                <i class="fa fa-user"></i>
                                            </a>
                                        }
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-center text-muted">
                    No menu items available right now.
                </p>
            }

        </div>
    </section>

    <!-- Reviews Section -->
    @if (reviews.Any())
    {
        <section class="client_section layout_padding">
            <div class="container">

                <div class="heading_container heading_center mb-4">
                    <h2>Customer Reviews</h2>
                </div>

                <div id="reviewsCarousel" class="carousel slide" data-bs-ride="carousel">

                    <div class="carousel-inner">

                        @{
                            bool first = true;
                        }

                        @foreach (var review in reviews)
                        {
                            var reviewerName = review.User?.FullName ?? "Anonymous";
                            var commentText = review.Comment ?? "";
                            var rating = review.Rating;

                            <div class="carousel-item @(first ? "active" : "")">
                                <div class="box col-lg-8 mx-auto text-center">

                                    <div class="img_box mb-3">
                                        <img src="/images/client1.jpg" alt="Client" class="rounded-circle" width="90" />
                                    </div>

                                    <div class="detail_box">
                                        <h5>@reviewerName</h5>
                                        <p>@commentText</p>

                                        <div class="rating">
                                            @for (int i = 0; i < rating; i++)
                                            {
                                                <i class="fa fa-star text-warning"></i>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            first = false;
                        }

                    </div>

                    <button class="carousel-control-prev"
                            type="button"
                            data-bs-target="#reviewsCarousel"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>

                    <button class="carousel-control-next"
                            type="button"
                            data-bs-target="#reviewsCarousel"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>

                </div>

            </div>
        </section>
    }
}
