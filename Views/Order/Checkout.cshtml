@model IEnumerable<Mais_Kitchen.Models.CartItem>
@{
    ViewData["Title"] = "Checkout";
    decimal subtotal = Model.Sum(i => i.FoodItem.Price * i.Quantity);
    decimal delivery = 2.99M;
    decimal tax = subtotal * 0.08M;
    decimal total = subtotal + delivery + tax;
}

<section class="food_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Checkout</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Food Item</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FoodItem.FoodName</td>
                                <td>@item.Quantity</td>
                                <td>$@item.FoodItem.Price.ToString("0.00")</td>
                                <td>$@(item.FoodItem.Price* item.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="card p-4 shadow-sm">
                    <h4>Payment Summary</h4>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span>Subtotal</span>
                        <strong>$@subtotal.ToString("0.00")</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Delivery Fee</span>
                        <strong>$@delivery.ToString("0.00")</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Tax (8%)</span>
                        <strong>$@tax.ToString("0.00")</strong>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span><strong>Total</strong></span>
                        <strong>$@total.ToString("0.00")</strong>
                    </div>
                </div>

                <form asp-action="PlaceOrder" method="post" class="mt-4">
                    <div class="form-group">
                        <label>Select Payment Method:</label>
                        <select name="paymentMethod" class="form-control" required>
                            <option>Cash on Delivery</option>
                            <option>Credit Card</option>
                            <option>Online Payment</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block btn-lg mt-3">
                        Place Order <i class="fa fa-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
