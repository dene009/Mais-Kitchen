@model Mais_Kitchen.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password | Mai's Kitchen";
}

<section class="food_section layout_padding" style="background:#ffffff;">
    <div class="container">
        <div class="heading_container heading_center mb-5">
            <h2 class="text-danger">Forgot Your Password?</h2>
            <p class="text-muted">Enter your registered email address, and we’ll send you a reset link.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <form asp-action="ForgotPassword" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-4">
                                <label asp-for="Email" class="fw-bold text-dark">Email Address</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="you@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-danger btn-lg w-100 text-uppercase fw-bold">
                                <i class="fa fa-paper-plane"></i> Send Reset Link
                            </button>

                            <div class="text-center mt-4">
                                <a href="@Url.Action("Login", "Account")" class="text-danger fw-bold">
                                    <i class="fa fa-arrow-left"></i> Back to Login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
