@model Mais_Kitchen.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register | Mai's Kitchen";
}

<section class="food_section layout_padding" style="background:#fff;">
    <div class="container">
        <div class="heading_container heading_center mb-5">
            <h2 class="text-danger">Create Your Mai’s Kitchen Account</h2>
            <p class="text-muted">Join us and enjoy fast and delicious food delivery</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="fw-bold text-dark">First Name</label>
                                    <input asp-for="FirstName" class="form-control form-control-lg" placeholder="John" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="fw-bold text-dark">Last Name</label>
                                    <input asp-for="LastName" class="form-control form-control-lg" placeholder="Doe" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="fw-bold text-dark">Email Address</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="your@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Password" class="fw-bold text-dark">Password</label>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ConfirmPassword" class="fw-bold text-dark">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Re‑enter password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Phone" class="fw-bold text-dark">Phone Number</label>
                                <input asp-for="Phone" class="form-control form-control-lg" placeholder="+1 555 123 4567" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Address" class="fw-bold text-dark">Address</label>
                                <input asp-for="Address" class="form-control form-control-lg" placeholder="123 Main St" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="City" class="fw-bold text-dark">City</label>
                                    <input asp-for="City" class="form-control form-control-lg" placeholder="New York" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="State" class="fw-bold text-dark">State</label>
                                    <input asp-for="State" class="form-control form-control-lg" placeholder="NY" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="ZipCode" class="fw-bold text-dark">ZIP Code</label>
                                    <input asp-for="ZipCode" class="form-control form-control-lg" placeholder="10001" />
                                </div>
                            </div>

                            <button type="submit" class="btn btn-danger btn-lg w-100 mt-3 text-uppercase fw-bold">
                                <i class="fa fa-user-plus"></i> Register Now
                            </button>

                            <div class="text-center mt-4">
                                <p>Already have an account? <a href="@Url.Action("Login", "Account")" class="text-danger fw-bold">Login Here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
