@model Mais_Kitchen.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password | Mai's Kitchen";
}

<section class="food_section layout_padding" style="background:#ffffff;">
    <div class="container">
        <div class="heading_container heading_center mb-5">
            <h2 class="text-danger">Reset Your Password</h2>
            <p class="text-muted">Enter a new password below to secure your account.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <form asp-action="ResetPassword" method="post">
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="Password" class="fw-bold text-dark">New Password</label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter new password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="ConfirmPassword" class="fw-bold text-dark">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Re‑enter password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-danger btn-lg w-100 text-uppercase fw-bold">
                                <i class="fa fa-lock"></i> Reset Password
                            </button>

                            <div class="text-center mt-4">
                                <a href="@Url.Action("Login", "Account")" class="text-danger fw-bold">
                                    <i class="fa fa-arrow-left"></i> Return to Login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
