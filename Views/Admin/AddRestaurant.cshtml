@model Mais_Kitchen.Models.Restaurant

@{
    ViewData["Title"] = Model.RestaurantID == 0 ? "Add Restaurant" : "Edit Restaurant";
}

<section class="food_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center mb-4">
            <h2>@ViewData["Title"]</h2>
        </div>

        <form asp-action="@(Model.RestaurantID == 0 ? "AddRestaurant" : "EditRestaurant")"
              method="post"
              enctype="multipart/form-data"
              class="card p-4 shadow-sm">

            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="RestaurantID" />

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="RestaurantName" class="form-label"></label>
                <input asp-for="RestaurantName" class="form-control" />
                <span asp-validation-for="RestaurantName" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="row">
                <!-- Delivery Time -->
                <div class="col-md-6 mb-3">
                    <label asp-for="DeliveryTime" class="form-label"></label>
                    <input asp-for="DeliveryTime" type="number" min="0" class="form-control" />
                    <span asp-validation-for="DeliveryTime" class="text-danger"></span>
                </div>

                <!-- Delivery Fee -->
                <div class="col-md-6 mb-3">
                    <label asp-for="DeliveryFee" class="form-label"></label>
                    <input asp-for="DeliveryFee" type="number" step="0.01" min="0" class="form-control" />
                    <span asp-validation-for="DeliveryFee" class="text-danger"></span>
                </div>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label class="form-label">Restaurant Image</label>
                <input type="file"
                       name="imageFile"
                       accept="image/*"
                       class="form-control" />

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mt-3">
                        <small class="text-muted">Current Image:</small><br />
                        <img src="@Model.ImageUrl"
                             width="120"
                             class="rounded shadow-sm mt-2"
                             alt="Restaurant Image" />
                    </div>
                }
            </div>

            <!-- Active -->
            <div class="form-check mb-4">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Restaurants", "Admin")"
                   class="btn btn-secondary">
                    Cancel
                </a>

                <button type="submit"
                        class="btn btn-success px-4">
                    Save
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
