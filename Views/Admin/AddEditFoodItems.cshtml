@model Mais_Kitchen.Models.FoodItem

@{
    ViewData["Title"] = Model.FoodItemID == 0 ? "Add Food Item" : "Edit Food Item";
}

<section class="food_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center mb-4">
            <h2>@ViewData["Title"]</h2>
        </div>

        <form asp-action="@(Model.FoodItemID == 0 ? "AddFoodItem" : "EditFoodItem")"
              method="post"
              enctype="multipart/form-data"
              class="card p-4 shadow-sm">

            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="FoodItemID" />
            <input type="hidden" asp-for="ImageUrl" />

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Food Name -->
            <div class="mb-3">
                <label asp-for="FoodName" class="form-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label asp-for="CategoryID" class="form-label"></label>
                <select asp-for="CategoryID"
                        class="form-select"
                        asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "CategoryName"))">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>

            <!-- Restaurant -->
            <div class="mb-3">
                <label asp-for="RestaurantID" class="form-label"></label>
                <select asp-for="RestaurantID"
                        class="form-select"
                        asp-items="@(new SelectList(ViewBag.Restaurants, "RestaurantID", "RestaurantName"))">
                    <option value="">-- Select Restaurant --</option>
                </select>
                <span asp-validation-for="RestaurantID" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price"
                       type="number"
                       step="0.01"
                       min="0"
                       class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Calories -->
            <div class="mb-3">
                <label asp-for="Calories" class="form-label"></label>
                <input asp-for="Calories"
                       type="number"
                       min="0"
                       class="form-control" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label class="form-label">Image</label>
                <input type="file"
                       name="imageFile"
                       class="form-control"
                       accept="image/*" />
                <small class="text-muted">
                    Allowed: JPG, PNG, WEBP. Max 2MB.
                </small>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mt-2">
                        <img src="@Model.ImageUrl"
                             width="120"
                             class="rounded shadow-sm border"
                             alt="Food Image" />
                    </div>
                }
            </div>

            <!-- Checkboxes -->
            <div class="form-check mb-2">
                <input asp-for="IsVeg" class="form-check-input" />
                <label asp-for="IsVeg" class="form-check-label"></label>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsAvailable" class="form-check-input" />
                <label asp-for="IsAvailable" class="form-check-label"></label>
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Save
                </button>

                <a href="@Url.Action("FoodItems", "Admin")"
                   class="btn btn-secondary">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
