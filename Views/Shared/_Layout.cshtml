                                                                </a>
                                                                <a href="@Url.Action("Menu", "Home")" class="order_online">
                                                                    Order Online
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a href="@Url.Action("Login", "Account")" class="user_link">
                                                                    <i class="fa fa-user" aria-hidden="true"></i>
                                                                </a>
                                                                <a href="@Url.Action("Menu", "Home")" class="order_online">
                                                                    Order Online
                                                                </a>
                                                            }
                                                        </div>
                                                    </div>
                                                </nav>
                                            </div>
                                        </header>

                                        <!-- Render MVC Views Here -->
                                        <main>
                                            @RenderBody()
                                        </main>

                                        <!-- Footer -->
                                        <footer class="footer_section">
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-md-6 footer-col">
                                                        <div class="footer_contact">
                                                            <h4>Contact</h4>
                                                            <div class="contact_link_box">
                                                                <a href=""><i class="fa fa-map-marker"></i> Location</a>
                                                                <a href=""><i class="fa fa-phone"></i> +01 1234567890</a>
                                                                <a href=""><i class="fa fa-envelope"></i> info@maiskitchen.com</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 footer-col">
                                                        <div class="footer_detail">
                                                            <p>Fresh, fast, and hot food delivered from your favorite restaurants.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </footer>

                                        <!-- Feane JS scripts -->
                                        <script src="~/js/jquery-3.4.1.min.js"></script>
                                        <script src="~/js/bootstrap.js"></script>
                                        <script src="~/js/custom.js"></script>
                                        @RenderSection("Scripts", required: false)
                                    </body>
                                    </html>